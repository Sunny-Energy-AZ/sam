{
  "name": "node-sam",
  "version": "1.0.0",
  "description": "JavaScript library for creating renewable energy system models using SAM Simulation Core (SSC).",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "node-gyp": "^6.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3",
    "typedoc": "^0.20.34"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"**/*\" \"**/*\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "docs:build": "npx typedoc --out docs src",
    "preinstall": "export LIBRARY_PATH=$(pwd)/sam/ssc/lib/linux/:$LIBRARY_PATH && echo $DYLD_LIBRARY_PATH && node-gyp rebuild --directory=sam"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sunny-Energy-AZ/sam.git"
  },
  "keywords": [
    "sam",
    "node"
  ],
  "author": "Amrit Sharma <amrit.sharma@jalantechnologies.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sunny-Energy-AZ/sam/issues"
  },
  "homepage": "https://github.com/Sunny-Energy-AZ/sam#readme"
}
